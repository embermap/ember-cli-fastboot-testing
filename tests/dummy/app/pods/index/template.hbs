<DocsHeader />

<DocsHero
  @logo='ember-cli'
  @slimHeading='Fastboot'
  @strongHeading='Testing'
  @byline="Test your Fastboot rendered html alongside your application's tests."
/>

<div class='container'>
  <section class="max-w-md mx-auto text-center mt-16">
    <iframe
      width="640"
      height="360"
      src="https://www.youtube.com/embed/CNCR9fTAyTQ?rel=0"
      frameborder="0"
      allow="autoplay; encrypted-media"
      allowfullscreen
      title="EmberMap: FastBoot testing"
    ></iframe>
  </section>

  <section class='max-w-md mx-auto text-right my-16'>
    <LinkTo
      @route="docs"
      class="
        py-2 px-3
        rounded no-underline
        text-white bg-brand
        font-bold"
    >
      Get started &rarr;
    </LinkTo>
  </section>

</div>
